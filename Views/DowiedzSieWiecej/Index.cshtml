@model DowiedzSieWiecejViewModel
@{
    ViewData["Title"] = "Dowiedz się więcej";
}

<div class="container py-5">
    <h1 class="text-center mb-5">Dowiedz się więcej</h1>

    <section class="mb-5">
        <h2 class="mb-4">O nas</h2>
        <div class="row">
            @foreach (var info in Model.Informacja)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@info.Tytul</h5>
                            <p class="card-text">@info.Tresc</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section>
        <h2 class="mb-4">Najczęściej zadawane pytania (FAQ)</h2>
        <div class="accordion" id="faqAccordion">
            @for (int i = 0; i < Model.Faq.Count; i++)
            {
                var item = Model.Faq[i];
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading@i">
                        <button class="accordion-button @(i != 0 ? "collapsed" : "")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@i" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="collapse@i">
                            @item.Pytanie
                        </button>
                    </h2>
                    <div id="collapse@i" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="heading@i" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            @item.Odpowiedz
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
