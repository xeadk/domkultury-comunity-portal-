@model DomKultury.Models.Wydarzenie
@{
    ViewData["Title"] = "Usuń wydarzenie";
}
<section class="container pt-4">
    <div class="mb-4">
        <h2>Potwierdź usunięcie wydarzenia</h2>
    </div>
    <div class="card p-4 shadow-sm mb-4">
        <h4>@Model.Nazwa</h4>
        <p>@Model.Opis</p>
        @if (!string.IsNullOrEmpty(Model.ObrazekUrl))
        {
            <img src="@Model.ObrazekUrl" alt="Obrazek wydarzenia"
                 class="img-fluid rounded"
                 style="max-width: 200px;" />
        }
    </div>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</section>
