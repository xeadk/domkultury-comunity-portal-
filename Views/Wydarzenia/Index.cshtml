@model List<DomKultury.Models.Wydarzenie>

@{
    ViewData["Title"] = "Wydarzenia";
}

<h2>Wydarzenia</h2>

<form method="get" class="mb-3">
    <div class="form-group">
        <label for="categoryFilter">Filtruj po kategorii</label>
        <select id="categoryFilter" name="categoryId" class="form-control">
            <option value="">Wybierz kategorię</option>
            @foreach (var kategoria in ViewBag.Kategorie as List<DomKultury.Models.Kategoria>)
            {
                <option value="@kategoria.Id">@kategoria.Nazwa</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Filtruj</button>
</form>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Dodaj nowe</a>
}
@if (Model.Any())
{
    <div class="row">
        @foreach (var wydarzenie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(wydarzenie.ObrazekUrl))
                    {
                        <img src="@wydarzenie.ObrazekUrl" class="card-img-top" style="max-height: 200px; object-fit: cover;" alt="Zdjęcie wydarzenia">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@wydarzenie.Nazwa</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@wydarzenie.Kategoria?.Nazwa</h6>
                        <p class="card-text">@wydarzenie.Opis</p>
                        <p><strong>Data:</strong> @wydarzenie.Data.ToString("dd.MM.yyyy")</p>
                        <p><strong>Lokalizacja:</strong> @wydarzenie.Lokalizacja</p>
                        <p><strong>Organizator:</strong> @wydarzenie.Organizator</p>
                        <p><strong>Status:</strong> @(wydarzenie.Status ? "Zaplanowane" : "Odwołane")</p>
                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@wydarzenie.Id" class="btn btn-dark btn-sm">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@wydarzenie.Id" class="btn btn-danger btn-sm">Usuń</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Brak zaplanowanych wydarzeń.</p>
}
