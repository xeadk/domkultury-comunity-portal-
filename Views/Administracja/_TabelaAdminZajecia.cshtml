@model IEnumerable<DomKultury.Models.Zajecie>

<table class="table table-admin table-bordered table-hover" data-type="Zajecie">
    <thead class="table-light">
        <tr>
            @foreach (var prop in typeof(DomKultury.Models.Zajecie).GetProperties())
            {
                if (prop.Name != "Id")
                {
                    <th>@prop.Name</th>
                }
            }
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                @foreach (var prop in item.GetType().GetProperties())
                {
                    if (prop.Name != "Id")
                    {
                        <td contenteditable="true" data-field="@prop.Name">@prop.GetValue(item)</td>
                    }
                }
                <td>
                    <button class="btn btn-success btn-sm" onclick="zapiszWiersz(this)">Zapisz</button>
                    <button class="btn btn-danger btn-sm" onclick="usunWiersz(this)">Usu≈Ñ</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-add-row mt-2" onclick="dodajNowyWiersz('Zajecie')">Dodaj nowy</button>
