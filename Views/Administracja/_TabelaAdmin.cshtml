@model IEnumerable<DomKultury.Models.Wydarzenie>

<section class="admin-section">
    <table class="table table-admin table-bordered table-hover" data-type="Wydarzenie">
        <thead class="table-light">
            <tr>
                @foreach (var prop in typeof(DomKultury.Models.Wydarzenie).GetProperties())
                {
                    if (prop.Name != "Id")
                    {
                        <th>@prop.Name</th>
                    }
                }
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@item.Id">
                    @foreach (var prop in item.GetType().GetProperties())
                    {
                        if (prop.Name != "Id")
                        {
                            <td contenteditable="true" data-field="@prop.Name">@prop.GetValue(item)</td>
                        }
                    }
                    <td>
                        <button class="btn btn-sm btn-success" onclick="zapiszWiersz(this)">Zapisz</button>
                        <button class="btn btn-sm btn-danger" onclick="usunWiersz(this)">Usu≈Ñ</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-add-row" onclick="dodajNowyWiersz('Wydarzenie')">Dodaj nowy</button>
</section>
