@model DomKultury.Models.Zajecie
@{
    ViewData["Title"] = "Edytuj zajęcie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edytuj zajęcie</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nazwa"></label>
        <input asp-for="Nazwa" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Opis"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Termin"></label>
        <input asp-for="Termin" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="Lokalizacja"></label>
        <input asp-for="Lokalizacja" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cena"></label>
        <input asp-for="Cena" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaksymalnaLiczbaUczestnikow"></label>
        <input asp-for="MaksymalnaLiczbaUczestnikow" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="InstruktorId">Instruktor</label>
        <select asp-for="InstruktorId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Instruktorzy, "Id", "Imie"))">
        </select>
    </div>

    <div class="form-group">
        <label for="Obrazek">Nowe zdjęcie (opcjonalnie)</label>
        <input type="file" name="Obrazek" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
