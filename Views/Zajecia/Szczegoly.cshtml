@model DomKultury.Models.Zajecie
@{
    ViewData["Title"] = "Szczegóły zajęć";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/events.css" />

<div class="container py-5">
    <header class="text-center mb-4">
        <h2 class="fw-bold text-deep-purple">@Model.Nazwa</h2>
    </header>
    <div class="row g-4">
        @if (!string.IsNullOrEmpty(Model.ObrazekUrl))
        {
            <div class="col-md-6">
                <img src="@Model.ObrazekUrl" class="img-fluid rounded shadow" alt="Obrazek zajęć" />
            </div>
            <div class="col-md-6">
                <div class="card p-4">
                    <p><strong>Opis:</strong> @Model.Opis</p>
                    <p><strong>Rozszerzony opis:</strong> @Model.RozszerzonyOpis</p>
                    <p><strong>Termin:</strong> @Model.Termin.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Lokalizacja:</strong> @Model.Lokalizacja</p>
                    <p><strong>Cena:</strong> @Model.Cena.ToString("C")</p>
                    <p><strong>Maks. uczestników:</strong> @Model.MaksymalnaLiczbaUczestnikow</p>
                    <p><strong>Prowadzący:</strong> @Model.Instruktor?.Imie @Model.Instruktor?.Nazwisko</p>
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="container py-5">
                    <p><strong>Opis:</strong> @Model.Opis</p>
                    <p><strong>Rozszerzony opis:</strong> @Model.RozszerzonyOpis</p>
                    <p><strong>Termin:</strong> @Model.Termin.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Lokalizacja:</strong> @Model.Lokalizacja</p>
                    <p><strong>Cena:</strong> @Model.Cena.ToString("C")</p>
                    <p><strong>Maks. uczestników:</strong> @Model.MaksymalnaLiczbaUczestnikow</p>
                    <p><strong>Prowadzący:</strong> @Model.Instruktor?.Imie @Model.Instruktor?.Nazwisko</p>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a asp-controller="Zajecia" asp-action="Index" class="btn btn-hero">Powrót do listy</a>
    </div>
</div>
