@model DomKultury.Models.Zajecie
@{
    ViewData["Title"] = "Dodaj zajęcia";
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/events.css" />

<div class="container py-5">
    <header class="text-center mb-4">
        <h2 class="fw-bold text-deep-purple">Dodaj nowe zajęcia</h2>
    </header>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form asp-action="Create" enctype="multipart/form-data" method="post" class="card p-4 shadow-sm">
        <div class="form-group mb-3">
            <label asp-for="Nazwa" class="form-label"></label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Opis" class="form-label"></label>
            <textarea asp-for="Opis" class="form-control"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RozszerzonyOpis" class="form-label"></label>
            <textarea asp-for="RozszerzonyOpis" class="form-control" rows="6"></textarea>
            <span asp-validation-for="RozszerzonyOpis" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Termin" class="form-label"></label>
            <input asp-for="Termin" class="form-control" type="datetime-local" />
            <span asp-validation-for="Termin" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Lokalizacja" class="form-label"></label>
            <input asp-for="Lokalizacja" class="form-control" />
            <span asp-validation-for="Lokalizacja" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Cena" class="form-label"></label>
            <input asp-for="Cena" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Cena" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="MaksymalnaLiczbaUczestnikow" class="form-label"></label>
            <input asp-for="MaksymalnaLiczbaUczestnikow" class="form-control" />
            <span asp-validation-for="MaksymalnaLiczbaUczestnikow" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="InstruktorId" class="form-label">Instruktor</label>
            <select asp-for="InstruktorId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Instruktorzy, "Id", "Imie"))">
                <option value="">-- Wybierz instruktora --</option>
            </select>
            <span asp-validation-for="InstruktorId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Obrazek" class="form-label">Zdjęcie</label>
            <input type="file" name="Obrazek" class="form-control" />
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            <button type="submit" class="btn btn-hero">Dodaj</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
