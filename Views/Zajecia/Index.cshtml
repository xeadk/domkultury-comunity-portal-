@model List<DomKultury.Models.Zajecie>

@{
    ViewData["Title"] = "Zajęcia";
}

<h1>Zajęcia w Domu Kultury</h1>

<div class="container">
    <div class="row">
        @foreach (var zajecie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@zajecie.Nazwa</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@zajecie.Lokalizacja</h6>
                        <p class="card-text">@zajecie.Opis</p>
                        <p><strong>Termin:</strong> @zajecie.Termin.ToString("dddd, dd MMMM yyyy") @zajecie.Termin.ToString("HH:mm")</p>
                        <p><strong>Cena:</strong> @zajecie.Cena.ToString("C")</p>
                        <p><strong>Liczba uczestników:</strong> @zajecie.MaksymalnaLiczbaUczestnikow</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
