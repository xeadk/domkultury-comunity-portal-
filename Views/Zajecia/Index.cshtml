@model List<DomKultury.Models.Zajecie>

@{
    ViewData["Title"] = "Zajęcia w Domu Kultury";
}

<h2>@ViewData["Title"]</h2>

<!-- Komunikat, jeśli zapis się udał -->
@if (TempData["Komunikat"] != null)
{
    <div class="alert alert-success">
        @TempData["Komunikat"]
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var zajecie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@zajecie.Nazwa</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@zajecie.Lokalizacja</h6>
                        <p class="card-text">@zajecie.Opis</p>
                        <p><strong>Termin:</strong> @zajecie.Termin.ToString("dddd, dd MMMM yyyy") o @zajecie.Termin.ToString("HH:mm")</p>
                        <p><strong>Cena:</strong> @zajecie.Cena zł</p>
                        <p><strong>Maks. uczestników:</strong> @zajecie.MaksymalnaLiczbaUczestnikow</p>

                        <a asp-action="Zapisz" asp-route-id="@zajecie.Id" class="btn btn-primary">Zapisz się</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Brak dostępnych zajęć w tej chwili.</p>
}
