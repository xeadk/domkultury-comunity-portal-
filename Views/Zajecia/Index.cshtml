@model List<DomKultury.Models.Zajecie>

@{
    ViewData["Title"] = "Zajęcia w Domu Kultury";
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject RoleManager<IdentityRole> RoleManager

@if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Dodaj nowe</a>
}

<div class="container py-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (TempData["Komunikat"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Komunikat"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var zajecie in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(zajecie.ObrazekUrl))
                        {
                            <img src="@zajecie.ObrazekUrl" class="card-img-top" style="max-height: 200px; object-fit: cover;" alt="Zdjęcie zajęć" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@zajecie.Nazwa</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@zajecie.Lokalizacja</h6>
                            <p class="card-text">@zajecie.Opis</p>
                            @if (zajecie.Instruktor != null)
                            {
                                <p><strong>Prowadzący:</strong> @zajecie.Instruktor.Imie @zajecie.Instruktor.Nazwisko</p>
                            }
                            <ul class="list-unstyled">
                                <li><strong>Termin:</strong> @zajecie.Termin.ToString("dddd, dd MMMM yyyy") o @zajecie.Termin.ToString("HH:mm")</li>
                                <li><strong>Cena:</strong> @zajecie.Cena zł</li>
                                <li><strong>Maks. uczestników:</strong> @zajecie.MaksymalnaLiczbaUczestnikow</li>
                            </ul>

                            <div class="mt-auto">
                                <a asp-action="Zapisz" asp-route-id="@zajecie.Id" class="btn btn-primary w-100 mb-2">Zapisz się</a>

                                <a asp-action="Szczegoly" asp-route-id="@zajecie.Id" class="btn btn-primary w-100 mb-2 dowiedz-sie-wiecej">Dowiedz się więcej</a>


                                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                {
                                    <div class="d-flex justify-content-between">
                                        <a asp-action="Edit" asp-route-id="@zajecie.Id" class="btn btn-dark btn-sm">Edytuj</a>
                                        <a asp-action="Delete" asp-route-id="@zajecie.Id" class="btn btn-danger btn-sm">Usuń</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    }
    else
    {
        <p class="text-center mt-4">Brak dostępnych zajęć w tej chwili.</p>
    }
</div>
