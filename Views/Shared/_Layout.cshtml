<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DomKultury</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">



</head>

<body style="padding-top: 75px;"> @* jesli bedziemy chcieli zmienic na wieksze logo to to zwiekszymy*@
    <header>
        <nav class="navbar custom-navbar navbar-expand-lg fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand logo-text" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="logo-icon">🎭</span> Dom<span class="highlight">Kultury</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Zajecia" ? "active" : "")" asp-controller="Zajecia" asp-action="Index">Zajęcia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Wydarzenia" ? "active" : "")" asp-controller="Wydarzenia" asp-action="Index">Wydarzenia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Konkursy" asp-action="Index">Konkursy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">

                                <a class="nav-link" asp-controller="Administracja" asp-action="Index">Podgląd bazy danych</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Administracja" asp-action="ManageRoles">Zarządzanie rolami</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center text-md-start">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>Dom Kultury</h5>
                    <p>Tworzymy przestrzeń, w której każdy znajdzie swoje miejsce.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Kontakt</h5>
                    <p>ul. Kulturalna 12<br />00-000 Miasto<br />+48 123 456 789</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Linki</h5>
                    <a asp-controller="Home" asp-action="Index">Strona główna</a><br />
                    <a asp-controller="Zajecia" asp-action="Index">Zajęcia</a><br />
                    <a asp-controller="Wydarzenia" asp-action="Index">Wydarzenia</a><br />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
