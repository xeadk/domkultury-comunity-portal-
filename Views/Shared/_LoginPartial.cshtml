@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var currentPath = HttpContextAccessor.HttpContext?.Request?.Path.Value ?? "";
    var isRegister = currentPath.Contains("/Account/Register");
    var isLogin = currentPath.Contains("/Account/Login");
    var isManage = currentPath.Contains("/Account/Manage");
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var fullUsername = UserManager.GetUserName(User);
        var displayName = fullUsername?.Split('@')[0];

        <li class="nav-item">
            <a id="manage" class="nav-link @(isManage ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                👋 Witaj, <strong>@displayName</strong>!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link border-0">Wyloguj</button>
            </form>
        </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link @(isRegister ? "active" : "")" id="register" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
            <a class="nav-link @(isLogin ? "active" : "")" id="login" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
</ul>
